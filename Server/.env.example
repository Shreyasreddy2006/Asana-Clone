# Server Configuration
NODE_ENV=development
PORT=8765

# Database
MONGODB_URI=mongodb://localhost:27017/asana-clone

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-please-change-this-in-production
JWT_EXPIRE=7d

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:8080

# Email Configuration (optional - for sending notifications)
# Development: Use Ethereal (fake SMTP) or leave empty
# Production: Use real SMTP service like SendGrid, AWS SES, etc.
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@ethereal.email
EMAIL_PASSWORD=your-password
EMAIL_FROM=noreply@asanaclone.com
EMAIL_FROM_NAME=Asana Clone

# Logging
LOG_LEVEL=debug
